<div class='col-md-6 offset-md-3'>
    <h3>Edit Produk</h3>
    <br>
    <%= form_for @product, local: true, data: { turbo: false } do |f| %>
        <div class='form-group'>
            <%= f.label :name %>
            <%= f.text_field :name, class: 'form-control' %>
        </div>
        <div class='form-group'>
            <%= f.label :kategori %>
            <%= f.select :category_id, options_from_collection_for_select(list_categories, :id, :description, @product.category_id), {:include_blank => false},class: 'form-control' %>
        </div>
        <div class='form-group'>
            <%= f.label :Harga %>
            <%= f.text_field :price, class: 'form-control' %>
        </div>
        <div class='form-group'>
            <%= f.label :Berat %>
            <%= f.text_field :weight, class: 'form-control' %>
        </div>
        <div class='form-group'>
            <%= f.label :Kondisi %>
                <%= f.select :condition, options_for_select([['Baru', 'baru'], ['Bekas', 'bekas']], @product.condition), {:include_blank => false}, class: 'form-control' %>

        </div>
        <%= f.fields_for @inventory do |s| %>
        <div class='form-group'>
            <%= s.label :Stok %>
            <%= s.text_field :stock, class: 'form-control' %>
        </div>
        <% end %>

        <div class='form-group'>
            <%= f.label :Deskripsi %>
            <%= f.text_area :description, rows:10, class: 'form-control' %>
        </div>
        <div class='form-group'>
            <%= f.label :Gambar %>
            <%= f.file_field :image, class: 'form-control' %>
        </div>
        <br>
        <div class='form-group'>
            <%= f.submit 'Simpan', class: 'btn btn-primary form-control'%>
        </div>
    
        <% end %>
</div>