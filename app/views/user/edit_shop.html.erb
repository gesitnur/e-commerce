<div class='col-md-6 offset-md-3'>
    <h3>Edit Toko</h3>
    <br/>

    <%= form_for current_user, local: true, data: { turbo: false } do |f| %>
    
    
        <%= f.fields_for :vendor do |s| %>
        <div class='form-group'>
            <%= s.label :nama_toko %><br />
            <%= s.text_field :name, class: 'form-control'  %>
        </div>
        <div class='form-group'>
            <%= s.label :kota %><br />
            <%= s.text_field :city, class: 'form-control'  %>
        </div>
        <% end %>
        <br>
        <div class='form-group'>
            <%= f.submit 'Simpan', class: 'btn btn-primary form-control'%>
        </div>
    <% end %>
</div>