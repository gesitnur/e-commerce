

<div class="row" style="margin-left: 50px">
    <div class="col-md-6">
        <%= @product.image ? image_tag(@product.image.url, alt: 'Image', class: "img-responsive", width: "450px") : '' ;  %></br>
    </div>
    
    <div class="col-md-6">
        <h5 style="color:#5A92D6"><%= @product.category.description %></h5></br>
        <h1><%= @product.name %></h1></br>
        <p>Toko : <%= @product.vendor.name%></p>
        <p>Kondisi : <%= @product.condition.titleize%></p>
        <p>Berat   : <%= @product.weight %> gram</p>
        <p><%= @product.description %></p></br>
        <p>Stok : <strong><%= @product.inventory.stock %></strong></p>
        <hr>
        <div class="row">
            <div class="col-md-3">
            <h4>Rp <%= number_with_precision( @product.price, :precision => 0, :delimiter => '.') %></h4>
            </div>
            <div class="col-md-6">
            <%# add_cart %>

            <%= button_to "Tambah Ke Keranjang", carts_path(product_id: @product.id, user_id: current_user.id, vendor_id: @product.vendor_id), :method => "post", class:"btn btn-success", style:'background-color: #77c852; border-color: #77c852; ' %>
            </div>
        </div>
    </div>

</div>
 