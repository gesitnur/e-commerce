

<div class="row" style="margin-left: 50px">
    <div class="col-md-6">
        <%= image_tag ("/assets/product/#{@product.image}"), class: "img-responsive", width: "450px"%></br>
    </div>
    
    <div class="col-md-6">
        <h5 style="color:#5A92D6">Teknologi</h5></br>
        <h1><%= @product.name %></h1></br>
        <p>Kondisi : Baru</p>
        <p>Berat   : <%= @product.weight %> gram</p>
        <p><%= @product.description %></p></br>
        <p>Stok : <strong>500</strong></p>
        <hr>
        <div class="row">
            <div class="col-md-3">
            <h4>Rp <%= number_with_precision( @product.price, :precision => 0, :delimiter => '.') %></h4>
            </div>
            <div class="col-md-6">
            <%# add_cart %>

            <%= button_to "Tambah Ke Keranjang", carts_path(product_id: @product.id, user_id: current_user.id, vendor_id: @product.user_id, total: @product.price), :method => "post", class:"btn btn-success", style:'background-color: #77c852; border-color: #77c852; ' %>
            </div>
        </div>
    </div>

</div>
 